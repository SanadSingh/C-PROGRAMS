//Program to convert among units

# include <stdio.h>

int main()
{
    int c;
    double q;
    
    do
    { 
        
        
        
        
      printf("\n\n\n\n\n\nWelcome to unit converter , hope you are having a great day\n");
      printf("Heres the menu : \n\n");
      printf("Enter 0 to exit \n");
      printf("Enter 1 to convert kms to miles \n");
      printf("Enter 2 to convert inches to foots \n");
      printf("Enter 3 to convert cm to inches \n");
      printf("Enter 4 to convert pounds to kgs \n");
      printf("Enter 5 to convert inches to metres \n\n");
      printf("Enter your choice Monsieur : \n");
      scanf("%d",&c);
      
      
      
      if (c==0)
      {
          printf("\n\n**HAVE A GOOD DAY** \n");
      }
      
      else if (c==1)
      {
         printf("Enter the quantity : \n");
         scanf("%lf",&q);
         printf("\n%lf kms = %lf miles",q,q*0.621371);
      }
      
      else if (c==2)
      {
         printf("Enter the quantity : \n");
         scanf("%lf",&q); 
         printf("\n%lf inches = %lf foots",q,q/12);
      }
      
      else if (c==3)
      {
         printf("Enter the quantity : \n");
         scanf("%lf",&q);
         printf("\n%lf cms = %lf inches",q,q*0.393701);
      }
      
      else if (c==4)
      {
         printf("Enter the quantity : \n");
         scanf("%lf",&q);
         printf("\n%lf pounds = %lf kgs",q,q*0.453592);
      }
      
      else if (c==5)
      {
         printf("Enter the quantity : \n");
         scanf("%lf",&q); 
         printf("\n%lf inches = %lf metres",q,q*0.0254);
      }
      
      
      
      
        
    }while(c!=0);
    
    
    return(0);
}
